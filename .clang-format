# Generated from CLion C/C++ Code Style settings
---
Language: Cpp
BasedOnStyle: LLVM
AccessModifierOffset: -4
AlignAfterOpenBracket: BlockIndent
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
AlignOperands: AlignAfterOperator
AlignTrailingComments: false
AlwaysBreakTemplateDeclarations: Yes
BraceWrapping:
    AfterCaseLabel: false
    AfterClass: false
    AfterControlStatement: false
    AfterEnum: false
    AfterFunction: false
    AfterNamespace: false
    AfterStruct: false
    AfterUnion: false
    AfterExternBlock: false
    BeforeCatch: false
    BeforeElse: false
    BeforeLambdaBody: false
    BeforeWhile: false
    SplitEmptyFunction: true
    SplitEmptyRecord: true
    SplitEmptyNamespace: true
BreakBeforeBraces: Custom
BreakConstructorInitializersBeforeComma: false
BreakConstructorInitializers: AfterColon
ColumnLimit: 88
CompactNamespaces: true
NamespaceIndentation: None
ConstructorInitializerAllOnOneLineOrOnePerLine: true
ConstructorInitializerIndentWidth: 4
ContinuationIndentWidth: 4
SortIncludes: CaseSensitive
IncludeBlocks: Regroup
IncludeCategories:
    # std - C++ standard library headers without extensions
    - Regex: "^<[a-z_]+>$"
      Priority: 1
      SortPriority: 1
    # external - System C headers (with .h extension)
    - Regex: "^<[a-z_]+\\.h>$"
      Priority: 2
      SortPriority: 2
    # external - Other angle bracket includes
    - Regex: "^<.*>$"
      Priority: 2
      SortPriority: 2
    # external - Third-party libraries with quotes (from MODULE.bazel and vendor/)
    - Regex: '^"(google|glog|gtest|gmock|grpc|gflags|nlohmann|lua|open62541|mbedtls|modbus)/'
      Priority: 2
      SortPriority: 2
    # module - Synnax cross-component headers (x/cpp, client, freighter)
    - Regex: '^"(x/cpp|client|freighter)/'
      Priority: 3
      SortPriority: 3
    # internal - Same-directory/module headers (includes protos)
    - Regex: '^".*"$'
      Priority: 4
      SortPriority: 4
IncludeIsMainRegex: "$^"
IndentCaseLabels: true
IndentWidth: 4
InsertNewlineAtEOF: true
MacroBlockBegin: ""
MacroBlockEnd: ""
MaxEmptyLinesToKeep: 1
SpaceAfterCStyleCast: true
SpaceAfterTemplateKeyword: false
SpaceBeforeRangeBasedForLoopColon: false
SpaceInEmptyParentheses: false
SpacesInAngles: false
SpacesInConditionalStatement: false
SpacesInCStyleCastParentheses: false
SpacesInParentheses: false
TabWidth: 4
BinPackArguments: false
BinPackParameters: false
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
PenaltyBreakAssignment: 10000
PenaltyBreakBeforeFirstCallParameter: 1
PenaltyExcessCharacter: 1000000
ExperimentalAutoDetectBinPacking: false
AllowShortFunctionsOnASingleLine: Inline
AlwaysBreakAfterReturnType: None
BreakAfterJavaFieldAnnotations: false
BreakBeforeInheritanceComma: false
AllowShortBlocksOnASingleLine: true
AllowShortIfStatementsOnASingleLine: true
SpaceBeforeParens: ControlStatements
BreakBeforeTernaryOperators: true
SpaceBeforeCtorInitializerColon: false
AlwaysBreakBeforeMultilineStrings: false
FixNamespaceComments: false
BreakStringLiterals: false
