{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Oracle",
  "scopeName": "source.oracle",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.oracle",
          "match": "//.*$"
        },
        {
          "name": "comment.block.oracle",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.oracle",
          "match": "\\b(struct|field|domain|enum|import)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.oracle",
          "match": "\\b(uuid|string|bool|int8|int16|int32|int64|uint8|uint16|uint32|uint64|float32|float64|timestamp|timespan|time_range|json|bytes)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.oracle",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.oracle",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.oracle",
          "match": "-?[0-9]+\\.[0-9]+"
        },
        {
          "name": "constant.numeric.integer.oracle",
          "match": "-?[0-9]+"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.oracle",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.oracle",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
