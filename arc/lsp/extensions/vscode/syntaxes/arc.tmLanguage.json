{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Arc",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#flow-operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#tasks"
    },
    {
      "include": "#channels"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.arc",
          "match": "//.*$"
        },
        {
          "name": "comment.block.arc",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.arc",
          "match": "\\b(if|else|return)\\b"
        },
        {
          "name": "keyword.other.arc",
          "match": "\\b(func|stage)\\b"
        },
        {
          "name": "constant.language.boolean.arc",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.arc",
          "match": "\\bnull\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.arc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.arc",
              "match": "\\\\([\\\\\"/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.arc",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.arc",
              "match": "\\\\([\\\\'bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.temporal.arc",
          "match": "\\b(\\d+(_\\d+)*(\\.\\d+(_\\d+)*)?([eE][+-]?\\d+(_\\d+)*)?)(ns|us|ms|s|m|h|hz|khz|mhz)\\b",
          "captures": {
            "1": {
              "name": "constant.numeric.float.arc"
            },
            "6": {
              "name": "keyword.other.unit.arc"
            }
          }
        },
        {
          "name": "constant.numeric.hex.arc",
          "match": "\\b0[xX][0-9a-fA-F]+(_[0-9a-fA-F]+)*\\b"
        },
        {
          "name": "constant.numeric.binary.arc",
          "match": "\\b0[bB][01]+(_[01]+)*\\b"
        },
        {
          "name": "constant.numeric.float.arc",
          "match": "\\b\\d+(_\\d+)*\\.\\d+(_\\d+)*([eE][+-]?\\d+(_\\d+)*)?\\b"
        },
        {
          "name": "constant.numeric.integer.arc",
          "match": "\\b\\d+(_\\d+)*\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.arc",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|string|timestamp|timespan|bool)\\b"
        },
        {
          "name": "support.type.composite.arc",
          "match": "\\b(series|chan)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.arc",
          "match": "[+\\-*/%]|\\*\\*|\\^"
        },
        {
          "name": "keyword.operator.comparison.arc",
          "match": "==|!=|<=?|>=?"
        },
        {
          "name": "keyword.operator.logical.arc",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.declare.arc",
          "match": ":="
        },
        {
          "name": "keyword.operator.assignment.stateful.arc",
          "match": "\\$="
        },
        {
          "name": "keyword.operator.assignment.arc",
          "match": "="
        },
        {
          "name": "keyword.operator.channel.arc",
          "match": "<-"
        }
      ]
    },
    "flow-operators": {
      "patterns": [
        {
          "name": "keyword.operator.flow.arc",
          "match": "->"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.arc",
          "begin": "\\b(func)\\s+(\\w+)\\s*\\(",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.arc"
            },
            "2": {
              "name": "entity.name.function.arc"
            }
          },
          "end": "\\)",
          "patterns": [
            {
              "include": "#function-parameters"
            }
          ]
        },
        {
          "name": "support.function.builtin.arc",
          "match": "\\b(len|now)\\b(?=\\s*\\()"
        },
        {
          "name": "entity.name.function.arc",
          "match": "\\b\\w+\\b(?=\\s*\\()"
        }
      ]
    },
    "tasks": {
      "patterns": [
        {
          "name": "meta.stage.definition.arc",
          "begin": "\\b(stage)\\s+(\\w+)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.arc"
            },
            "2": {
              "name": "entity.name.type.stage.arc"
            }
          },
          "end": "\\}",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
          "name": "meta.stage.invocation.arc",
          "match": "\\b(\\w+)\\s*\\{[^}]*\\}",
          "captures": {
            "1": {
              "name": "entity.name.function.stage-invocation.arc"
            }
          }
        },
        {
          "name": "meta.stdlib.stage.arc",
          "match": "\\b(interval|all|once|any|throttle|merge|tee)\\b(?=\\s*\\{)",
          "captures": {
            "1": {
              "name": "support.function.builtin.stage.arc"
            }
          }
        }
      ]
    },
    "channels": {
      "patterns": [
        {
          "name": "support.type.channel.arc",
          "match": "(<-)?chan|chan(<-)?",
          "captures": {
            "1": {
              "name": "keyword.operator.channel.arc"
            },
            "2": {
              "name": "keyword.operator.channel.arc"
            }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.arc",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "include": "#types"
        },
        {
          "include": "#identifiers"
        },
        {
          "name": "punctuation.separator.arc",
          "match": ","
        }
      ]
    }
  },
  "scopeName": "source.arc"
}
