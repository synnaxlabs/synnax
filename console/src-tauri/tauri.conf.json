{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build-vite",
    "beforeDevCommand": "pnpm dev-vite",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Synnax",
    "version": "0.20.4"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "bin/sy",
            "sidecar": true,
            "args": ["start", "-i", "-l","localhost:9090", "-d", {"validator": "\\S+"}]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
            "bin/sy"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.synnaxlabs.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null,
      "dangerousUseHttpScheme": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/synnaxlabs/synnax/main/console/release-spec.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM4NDVGQTU1RTMxN0M3MjAKUldRZ3h4ZmpWZnBGeUpLeHNMdlE0aGNUcHZrU3M0REpxMGtJdmN2ZGs0OVBUQ0Nrb3Z5SFdacjEK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 810,
        "resizable": true,
        "title": "Synnax",
        "width": 1080,
        "fileDropEnabled": false,
        "minWidth": 625,
        "minHeight": 375,
        "visible": true,
        "acceptFirstMouse": true
      }
    ]
  }
}
