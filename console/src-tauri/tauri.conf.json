{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Synnax",
  "version": "0.50.1",
  "build": {
    "beforeBuildCommand": "pnpm build-vite",
    "beforeDevCommand": "pnpm dev-vite",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "signCommand": "powershell -File scripts\\Sign.ps1 %1"
    },
    "macOS": {
      "entitlements": null,
      "frameworks": [],
      "providerShortName": null
    },
    "resources": ["../../vendor/lua-language-server/**/*"],
    "linux": { "deb": { "depends": [] } }
  },
  "identifier": "com.synnaxlabs.dev",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM4NDVGQTU1RTMxN0M3MjAKUldRZ3h4ZmpWZnBGeUpLeHNMdlE0aGNUcHZrU3M0REpxMGtJdmN2ZGs0OVBUQ0Nrb3Z5SFdacjEK",
      "endpoints": [
        "https://raw.githubusercontent.com/synnaxlabs/synnax/main/console/release-spec.json"
      ]
    },
    "deep-link": { "mobile": [], "desktop": { "schemes": ["synnax"] } }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 810,
        "resizable": true,
        "title": "Synnax",
        "width": 1080,
        "minWidth": 625,
        "minHeight": 425,
        "visible": false,
        "acceptFirstMouse": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": { "csp": null }
  }
}
