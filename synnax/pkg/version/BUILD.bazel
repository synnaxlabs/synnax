exports_files(["VERSION"])

genrule(
    name = "version_header",
    srcs = ["VERSION"],
    outs = ["version.h"],
    cmd = """
        echo '#define SYNNAX_DRIVER_VERSION \"'$$(cat $(location VERSION))'\"' > $@ &&
        echo '#define SYNNAX_BUILD_TIMESTAMP \"'$$(date "+%Y-%m-%d %H:%M:%S")'\"' >> $@
    """,
    visibility = ["//visibility:public"],
)
