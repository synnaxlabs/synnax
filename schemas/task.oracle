import "schemas/status"

@ts output "client/ts/src/task"
@py output "client/py/synnax/task"
@go output "core/pkg/service/task"
@pb

Key uint64 {
    @ts type      string
    @ts to_string
}

StatusDetails struct<Data extends json = json> {
    task    Key?
    running bool?
    cmd     string?
    data    Data??

    @go omit
    @pb omit
}

GoStatusDetails struct extends StatusDetails<json> {
    data json??
    -data

    @go name  "StatusDetails"
    @pb name  "StatusDetails"
    @ts omit
    @py omit
    @cpp omit
}

Status<Data extends json = json> = status.Status<StatusDetails<Data>> {
    @go omit
    @pb omit
}

GoStatus = status.GoStatus<GoStatusDetails> {
    @go name  "Status"
    @pb name  "Status"
    @ts omit
    @py omit
    @cpp omit
}

NewStatusDetails struct<Data extends json = json> {
    task    Key?
    running bool
    cmd     string?
    data    Data

    @go omit
    @pb omit
    @py omit
}

NewStatus<Data extends json = json> = status.New<NewStatusDetails<Data>> {
    @go omit
    @pb omit
    @py omit
}

Task struct<
    Type extends string = string,
    Config extends json = json,
    StatusData extends json = json
> {
    key      Key                 @key
    name     string
    type     Type
    config   Config
    internal bool?
    snapshot bool?
    status   Status<StatusData>?

    @ts {
        name "Payload"
        concrete_types
    }
    @py name       "Payload"
    @ontology type "task"
    @go omit
    @pb omit
}

GoTask struct extends Task<string, string, json> {
    config string
    status GoStatus??
    -config
    -status

    @go name  "Task"
    @pb name  "Task"
    @ts omit
    @py omit
    @cpp omit
}

New struct<
    Type extends string = string,
    Config extends json = json,
    StatusData extends json = json
> extends Task<Type, Config, StatusData> {
    key    Key?
    config Config                 @ts stringify
    status NewStatus<StatusData>?
    -internal
    -snapshot

    @ts {
        use_input
        concrete_types
    }
    @go omit
    @pb omit
    @py omit
}

Command struct {
    task Key
    type string
    key  string
    args json?
}
