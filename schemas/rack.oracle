import "schemas/status"

@ts output  "client/ts/src/rack"
@py output  "client/py/synnax/rack"
@cpp output "client/cpp/rack"
@go output  "core/pkg/service/rack"
@pb

Key uint32

StatusDetails struct {
    rack Key
}

Status = status.Status<StatusDetails>

Rack struct {
    key          Key      @key
    name         string   @validate required
    task_counter uint32?
    embedded     bool?
    status       Status??

    @ts name       "Payload"
    @ontology type "rack"
    @cpp name      "Payload"
    @py name       "Base"
}

New struct extends Rack {
    key uint32 @validate default 0
    -task_counter
    -embedded

    @ts use_input
    @go omit
    @pb omit
    @cpp omit
    @py name      "Rack"
}
