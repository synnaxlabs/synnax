{
  "name": "@synnaxlabs/drift",
  "private": false,
  "version": "0.5.0",
  "description": "State synchronization and Redux state synchronization for Tauri Apps",
  "repository": "https://github.com/synnaxlabs/synnax/tree/main/drift",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "synnax",
    "tauri",
    "redux",
    "react",
    "electron",
    "application level state"
  ],
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "watch": "tsc --noEmit && vite build --watch",
    "test": "vitest",
    "cov": "vitest --coverage",
    "lint": "eslint \"src/**/*.ts*\"",
    "fix": "eslint \"src/**/*.ts*\" --fix"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@synnaxlabs/x": "workspace:*"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.2.0",
    "@tauri-apps/api": "^1.5.3",
    "proxy-memoize": "1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.2.3",
    "@synnaxlabs/tsconfig": "workspace:*",
    "@synnaxlabs/vite-plugin": "workspace:*",
    "@tauri-apps/api": "^1.5.4",
    "@types/react": "^18.2.79",
    "@vitest/coverage-v8": "1.2.2",
    "eslint-config-synnaxlabs": "workspace:*",
    "proxy-memoize": "1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.1",
    "typescript": "^5.4.5",
    "vite": "5.1.2",
    "vite-plugin-lib": "^2.0.9",
    "vitest": "1.2.2"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/drift.cjs.js",
  "module": "./dist/drift.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.cjs",
      "types": "./dist/react/index.d.ts"
    },
    "./tauri": {
      "import": "./dist/tauri.js",
      "require": "./dist/tauri.cjs",
      "types": "./dist/tauri/index.d.ts"
    }
  }
}
