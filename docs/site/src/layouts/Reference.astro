---
import Article from "@/components/article/Article.astro";
import OnThisPage from "@/components/nav/OnThisPage.astro";
import PageNav from "@/components/nav/Page.astro";
import Main from "@/layouts/Root.astro";
const { headings, frontmatter } = Astro.props;
const {
    title,
    heading,
    description,
    url,
    next,
    nextURL,
    prev,
    prevURL,
    clients,
    platforms,
} = frontmatter;
---

<Main frontmatter={frontmatter} headings={headings}>
    <PageNav />
    <section>
        <Article
            url={url}
            title={heading ?? title}
            description={description}
            next={next}
            prev={prev}
            nextURL={nextURL}
            prevURL={prevURL}
        >
            <slot /></Article
        >
        <OnThisPage
            headings={headings}
            url={Astro.url}
            clients={clients}
            platforms={platforms}
        />
    </section>
</Main>
