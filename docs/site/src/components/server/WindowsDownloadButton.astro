---
import { Icon } from "@synnaxlabs/media";
import { Button } from "@synnaxlabs/pluto";

const VERSION_URL =
    "https://raw.githubusercontent.com/synnaxlabs/synnax/main/synnax/pkg/version/VERSION";

const version = await (await fetch(VERSION_URL)).text();
const url = `https://github.com/synnaxlabs/synnax/releases/download/synnax-v${version}/synnax-setup-v${version}.exe`;
---

<Button.Link href={url} size="large">
    <Icon.Download slot="startIcon" />
    Download Synnax v{version} for Windows
</Button.Link>
