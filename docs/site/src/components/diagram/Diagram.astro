            img {
                width: 100%;
                border-radius: 1rem;
                z-index: 3;
            }
            & .internal {
                position: absolute;
                z-index: 0;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                background: linear-gradient(
                    45deg,
                    var(--pluto-primary-z-50),
