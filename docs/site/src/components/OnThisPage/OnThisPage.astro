---
import Feedback from "@/components/feedback/Feedback.astro";
import { OnThisPage as OTP } from "@/components/OnThisPage/OnThisPage";
import { Icon } from "@synnaxlabs/media";
import { Align, Divider, Text } from "@synnaxlabs/pluto";
const props = Astro.props;
---

<Align.Space el="nav" className="on-this-page" size={4}>
    <Align.Space direction="y" size={2}>
        <Text.WithIcon level="h5">
            <Icon.Log slot="startIcon" style={{ transform: "scale(0.8)" }} />
            On this page
        </Text.WithIcon>
        <OTP client:only="react"  headings={props.headings} url={props.url}  platforms={props.platforms}/>
    </Align.Space>
    <Align.Space direction="y" size={2}>
        <Divider.Divider direction="x" />
        <Align.Space direction="x" justify="end">
            <Feedback />
        </Align.Space>
    </Align.Space>
</Align.Space>

<style is:global>
    .on-this-page {
        top: 22rem;
        width: 235px;

        @media (max-width: 1100px) {
            display: none !important;
        }

        flex-shrink: 0;
        & h5 {
            font-weight: 500;
        }

        .heading {
            border-bottom: none;
        }

        & .header-link {
            box-shadow: inset -1px 0 0 0 var(--pluto-border-color);
            &.depth-3 {
                margin-left: 2rem;
            }
        }

        & .pluto-menu-item {
            border-radius: 0 !important;
            white-space: normal;
            height: fit-content;
            display: block;
            padding: 0.75rem 2rem !important;
            transition: box-shadow 0.2s ease;
            background: none !important;
            & small {
                font-weight: 400 !important;
                color: var(--pluto-gray-l6) !important;
            }
            &:is(.pluto--selected, :hover) {
                box-shadow: inset -2px 0 0 0 var(--pluto-primary-z);
                & small {
                    font-weight: 500 !important;
                    color: var(--pluto-text-color) !important;
                }
            }
        }
    }
</style>
