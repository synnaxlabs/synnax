---
import { Icon, Text, Flex } from "@synnaxlabs/pluto";
const { date, version, title, breakingChanges } = Astro.props;
const firstPart = version.split(".").slice(0, 2).join(".");
---

<Flex.Box direction="x" id={version.split(".").join("-")} className="release" empty>
    <Flex.Box direction="y" className="meta" align="start" gap="large">
        <Flex.Box direction="y" empty>
            <Text.Text level="h3" weight={500}>Version {firstPart}</Text.Text>
            <Text.Text color={8}>{date}</Text.Text>
            {
                breakingChanges ? (
                    <Text.Text className="breaking-changes" level="small">
                        Breaking Changes
                    </Text.Text>
                ) : (
                    <Text.Text className="no-breaking-changes" level="small">
                        No Breaking Changes
                    </Text.Text>
                )
            }
        </Flex.Box>
        <Flex.Box direction="x" align="center" gap="large">
            <Text.Text
                href={`https://github.com/synnaxlabs/synnax/tree/synnax-v${version}`}
            >
                <Icon.Logo.Github className="link" />
            </Text.Text>
            <Text.Text href={`https://pypi.org/project/synnax/${firstPart}/`}>
                <Icon.Python className="link" />
            </Text.Text>
            <Text.Text
                href={`https://npmjs.com/package/@synnaxlabs/client/v/${version}`}
            >
                <Icon.TypeScript className="link" />
            </Text.Text>
        </Flex.Box>
    </Flex.Box>
    <Flex.Box direction="y" className="details">
        <Text.Text level="h2" className="title">{title}</Text.Text>
        <article>
            <slot />
        </article>
    </Flex.Box>
</Flex.Box>

<style is:global>
    .release {
        padding: 10rem 0rem;
        max-width: 1150px;
        position: relative;
        margin: 0 auto;
        .meta {
            height: fit-content;
            position: sticky;
            top: 120px;
            padding-top: 1rem;
            padding-left: 3rem;
            flex-basis: 375px;
            flex-grow: 1;
        }
        .details {
            flex-basis: 600px;
            flex-grow: 3;
            min-width: 0;
        }
        .breaking-changes {
            color: var(--pluto-error-z);
        }
        .no-breaking-changes {
            color: var(--pluto-success-z);
        }
        .link {
            height: 3.25rem;
            width: 3.25rem;
            &.pluto-icon--logo-github {
                transform: scale(1.2);
            }
            color: var(--pluto-gray-l7);
            transition: all 0.2s ease-in-out;

            &:hover {
                color: var(--pluto-gray-l10);
            }
        }
    }
    @media (max-width: 800px) {
        .release {
            flex-direction: column !important;
            .meta {
                position: unset;
                flex-basis: fit-content;
                padding-left: 0;
                padding-bottom: 4rem;
            }
        }
    }
</style>
