---
import { Search as S } from "@/components/search/Search";
---

<S client:only="react" />

<style is:global>
    .search-box {
        position: absolute;
        left: 50%;
        top: 1.5rem;
        transform: translateX(-50%);
        width: 50vw;
        max-width: 800px;

        & button * {
            color: var(--pluto-gray-l7);
            font-size: var(--pluto-small-size);
            font-weight: 400;
        }

        & .pluto-text--keyboard {
            font-size: 1.9rem;
            & svg {
                width: 2.1rem;
                height: 2.1rem;
            }
        }
    }

    @media (max-width: 800px) {
        .search-box {
            width: 45vw;
            top: unset;
            transform: none;
            position: relative;
            left: 0;
            & button {
                justify-content: start !important;
            }
        }
    }

    @media (max-width: 600px) {
        .search-box {
            width: 6rem;
            & button {
                justify-content: center !important;
            }
            .pluto-text,
            .pluto-btn__end-content {
                display: none;
            }
        }
    }

    .search-results__content {
        & .search-results__input {
            --pluto-h2-size: 3.5rem;
        }
        width: 800px;
        max-width: 100%;
        height: 400px;
        min-width: 200px;

        & .search-result {
            padding: 2rem;
            &:hover {
                background: var(--pluto-gray-l3);
            }

            & b {
                background: var(--pluto-primary-z-15);
            }

            & .pluto-breadcrumb {
                gap: 0.25rem !important;
                margin-left: 0.25rem;
                * {
                    font-size: 2.1rem;
                    line-height: 150%;
                }
                .synnax-icon {
                    transform: scale(0.8) translateY(0px) !important;
                }
            }

            & small {
                color: var(--pluto-gray-l8);
            }
        }
        & a:hover {
            text-decoration: none !important;
        }
    }
</style>
