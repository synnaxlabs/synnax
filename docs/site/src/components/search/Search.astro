---
import { Search as S } from "@/components/search/Search";
---

<S client:only="react" />

<style is:global>
    .search-box {
        position: absolute;
        left: 50%;
        top: 1.5rem;
        transform: translateX(-50%);
        max-width: 700px !important;
        width: 50vw !important;

        & button * {
            color: var(--pluto-gray-l8);
            font-size: var(--pluto-small-size);
            font-weight: 400;
        }

        & .pluto-text--keyboard {
            height: 3rem !important;
            background: var(--pluto-gray-l0) !important;
        }
    }

    @media (max-width: 800px) {
        .search-box {
            width: 45vw;
            top: unset;
            transform: none;
            position: relative;
            left: 0;
            & button {
                justify-content: start !important;
            }
        }
    }

    @media (max-width: 600px) {
        .search-box {
            width: 6rem !important;
            & button {
                justify-content: center !important;
            }
            .pluto-text,
            .pluto-btn__end-content {
                display: none;
            }
        }
    }

    .search-results__content {
        & .search-results__input {
            --pluto-h2-size: 3.5rem;
        }
        width: 800px;
        max-width: 100%;
        height: 400px;
        min-width: 200px;

        & a:hover {
            text-decoration: none !important;
        }
    }

    .search-results__content .pluto-list__item {
        padding: 2rem;

        &:hover {
            background: var(--pluto-gray-l3);
        }

        b {
            background: var(--pluto-primary-z-30);
            font-weight: inherit;
            border-radius: 0.25rem;
        }

        .pluto-text--h5 {
            color: var(--pluto-gray-l10) !important;
            display: block !important;
        }

        .pluto-breadcrumb {
            gap: 0.25rem !important;
            margin-left: 0.25rem;

            * {
                font-size: 2.3rem;
                line-height: 150%;
                color: var(--pluto-gray-l8) !important;
            }

            .pluto-icon {
                transform: scale(0.8) translateY(0px) !important;
            }
        }

        .pluto-text--small:not(.pluto-breadcrumb) {
            color: var(--pluto-gray-l7) !important;
            display: block !important;
            white-space: normal !important;
            word-wrap: break-word;
        }
    }
</style>
