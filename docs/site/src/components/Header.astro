---
import { Align } from "@synnaxlabs/pluto/align";
import { Icon, Logo } from "@synnaxlabs/media";
import Search from "@/components/search/Search.astro";
import { Button, Text } from "@synnaxlabs/pluto";
import { PageNavMobile } from "@/components/PageNav/PageNav";
const url = Astro.url.pathname;
---

<Align.Space className="main-header" justify="center" align="center" el="header" empty>
    <Align.Space className="top" justify="center" align="center">
        <Align.Space
            className="header-content"
            direction="x"
            justify="spaceBetween"
            align="center"
        >
            <a href="https://synnaxlabs.com">
                <Logo variant="title" />
            </a>
            <Align.Space direction="x" align="center" justify="center">
                <Align.Space direction="x" size="small">
                    <Search />
                    <PageNavMobile
                        client:only="react"
                        currentPage={Astro.url.pathname}
                    />
                </Align.Space>
                <Button.Link
                    className="version-button"
                    variant="text"
                    href="https://github.com/synnaxlabs/synnax"
                    iconSpacing="small"
                >
                    <Icon.Logo.Github slot="endIcon" />
                    <p class="version" transition:persist></p>
                </Button.Link>
            </Align.Space>
        </Align.Space>
    </Align.Space>
    <Align.Space className="bottom" justify="center" align="center">
        <Align.Space direction="x" className="header-content" size={5} justify="start">
            <Text.Link
                href="/reference/"
                className={url.includes("reference") ? "active" : ""}
                level="h5">Reference</Text.Link
            >
            <Text.Link
                href="/guides/"
                className={url.includes("guides") ? "active" : ""}
                level="h5">Guides</Text.Link
            >
            <Text.Link
                href="/releases/"
                className={url.includes("releases") ? "active" : ""}
                level="h5">Release Notes</Text.Link
            >
        </Align.Space>
    </Align.Space>
</Align.Space>

<style is:global>
    .main-header {
        z-index: 4;
        position: sticky;
        top: 0;
        background: var(--pluto-gray-l0-90);
        backdrop-filter: blur(3rem);
        -webkit-backdrop-filter: blur(3rem);

        .top {
            height: 9rem;
            border-bottom: var(--pluto-border);
            width: 100%;

            & .version-button {
                & p {
                    color: var(--pluto-gray-l7);
                    font-weight: 400;
                }
                & .synnax-icon {
                    color: var(--pluto-gray-l7);
                    transform: scale(115%) translateY(-5%);
                }
            }

            & .synnax-logo--title {
                height: 5rem;
            }
        }

        .bottom {
            .header-content {
                padding: 0 10rem;
            }
            height: 5.5rem;
            border-bottom: var(--pluto-border);
            width: 100%;

            .pluto-text-link {
                font-size: 13.5px;
                font-weight: 425;
                color: var(--pluto-gray-l7);
                position: relative;
                &:before {
                    transition: all 0.2s ease-in-out;
                    content: "";
                    position: absolute;
                    width: 0%;
                    height: var(--pluto-border-width);
                    bottom: -7px;
                    left: 0%;
                    border-bottom: var(--pluto-border);
                    border-color: var(--pluto-primary-z);
                    border-width: 2px;
                }
                &.active {
                    color: var(--pluto-gray-l10);
                    &:before {
                        width: 50% !important;
                    }
                }
            }

            .pluto-text-link:hover {
                text-decoration: none;
                color: var(--pluto-gray-l10);
                &:before {
                    width: 50%;
                }
            }
        }
        .header-content {
            width: 100%;
            max-width: var(--max-width);
            padding: 0 7rem;
        }

        .page-nav-mobile {
            display: none;
        }
    }

    @media (max-width: 800px) {
        .main-header {
            .bottom .header-content {
                justify-content: center !important;
            }
            .top .header-content {
                padding: 0 3rem;
            }
            .version-button {
                display: none;
            }
            .page-nav-mobile {
                display: flex;
            }
        }
    }

    @media (max-width: 800px) and (hover: none) {
        .main-header {
            z-index: 100;
            flex-direction: column-reverse !important;
            position: fixed;
            bottom: 0px;
            top: unset;
            width: 100%;
            border-top: var(--pluto-border-l4);
        }
    }
</style>
