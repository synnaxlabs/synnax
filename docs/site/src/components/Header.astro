---
import { Align } from "@synnaxlabs/pluto/align";
import { Icon, Logo } from "@synnaxlabs/media";
import Search from "@/components/search/Search.astro";
---

<Align.Space className="main-header" justify="center" align="center" el="header">
    <Align.Space
        className="header-content"
        direction="x"
        justify="spaceBetween"
        align="center"
    >
        <a href="https://synnaxlabs.com">
            <Logo variant="title" />
        </a>
        <Align.Space direction="x" align="center">
            <p class="version" transition:persist></p>
            <a href="https://github.com/synnaxlabs/synnax">
                <Icon.Logo.Github
                    style={{ height: "3rem", width: "3rem" }}
                    fill="var(--pluto-text-color)"
                />
            </a>
        </Align.Space>
        <Search />
    </Align.Space>
</Align.Space>

<style is:global>
    .main-header {
        position: sticky;
        top: 0;
        background: var(--pluto-gray-l0-60);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        z-index: 100;
        height: 10rem;
        border-bottom: var(--pluto-border);
        width: 100%;

        & .synnax-logo--icon {
            display: none;
        }

        & .synnax-logo--title {
            height: 6rem;
        }

        @media (max-width: 1100px) {
            & .synnax-logo--title {
                margin-top: 1rem;
                height: 7rem;
                & text {
                    display: none;
                }
            }
        }
    }

    .header-content {
        width: 100%;
        max-width: var(--max-width);
        padding: 0 7rem;
    }
</style>
