<style is:global>
    .one-billion-rows {
        --pluto-gray-l1: var(--pluto-dark-gray-l1);
        --pluto-gray-l9: var(--pluto-dark-gray-l9);
        --pluto-gray-l10: var(--pluto-dark-gray-l10);
        --pluto-gray-l8: var(--pluto-dark-gray-l8);
        position: relative;
        background-color: var(--pluto-dark-gray-l1);
        padding: 5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none !important;
        &:hover {
            --pluto-shadow-menu: 0px 1px 1px rgba(0, 0, 0, 0.06),
                0px 4px 8px -4px rgba(0, 0, 0, 0.1),
                0px 16px 24px -8px rgba(0, 0, 0, 0.2);
            & h1 {
                color: var(--pluto-dark-gray-l5-80);
            }
        }
        *:not(h1) {
            z-index: 1;
        }
        & .synnax-logo {
            fill: var(--pluto-gray-l10);
            height: 80px;
        }
        & .influx {
            width: 80px;
            height: 80px;
        }
        & .timescale {
            width: 80px;
            height: 80px;
        }
        & h1 {
            transition: all 0.2s;
            color: var(--pluto-dark-gray-l4);
            position: absolute;
            z-index: 0;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 20rem;
        }
        border: var(--pluto-border-l4);
        box-shadow: var(--pluto-shadow-menu);
        border-radius: 2rem;
        height: 200px;
    }
</style>
