                    x1="-1"
                    y1="1"
                    x2="78"
                    y2="51.5"
                    gradientUnits="userSpaceOnUse"
                >
                    <stop stop-color="#007B59"></stop>
                    <stop offset="1" stop-color="#00FFB9"></stop>
                </linearGradient>
            </path>
        </svg>
    </Align.Space>
    <Align.Space direction="y" className="content" justify="start" empty>
        <Text.Text level="h3">Acquire data from NI devices </Text.Text>
        <Text.Text level="small" shade={8} weight={400}>
            Learn how to acquire data from National Instruments devices using Synnax.
